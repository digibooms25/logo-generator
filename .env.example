# API Keys
# Get your Flux Kontext Pro API key from: https://api.bfl.ai/
FLUX_KONTEXT_PRO_API_KEY=your_flux_api_key_here

# LLM API Configuration - Choose one of the following:
# OpenAI API Key (recommended)
OPENAI_API_KEY=your_openai_api_key_here

# Alternative LLM providers (uncomment if using):
# ANTHROPIC_API_KEY=your_anthropic_api_key_here
# GOOGLE_AI_API_KEY=your_google_ai_api_key_here

# Application Configuration
# Admin panel password (for simple authentication)
ADMIN_PASSWORD=your_secure_admin_password_here

# Upload configuration
MAX_FILE_SIZE_MB=10
ALLOWED_FILE_TYPES=jpg,jpeg,png,svg,webp

# Development settings
NODE_ENV=development
NEXT_PUBLIC_APP_URL=http://localhost:3000
